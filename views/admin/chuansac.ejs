<%- include('layout') %>

<div class="card mb-4">
  <div class="card-header">
    <h3>Thêm Chuẩn Sạc</h3>
  </div>
  <div class="card-body">
    <form action="/admin/chuansac/create" method="POST">
      <div class="mb-3">
        <label class="form-label">Loại Sạc</label>
        <input type="text" class="form-control" name="loaiSac" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Công Suất Tối Thiểu</label>
        <input
          type="number"
          class="form-control"
          name="congSuatToiThieu"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label">Công Suất Tối Đa</label>
        <input
          type="number"
          class="form-control"
          name="congSuatToiDa"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Thêm Chuẩn Sạc</button>
    </form>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Mã Chuẩn Sạc</th>
      <th>Loại Sạc</th>
      <th>Công Suất Tối Thiểu</th>
      <th>Công Suất Tối Đa</th>
      <th>Thao Tác</th>
    </tr>
  </thead>
  <tbody>
    <% chuanSacs.forEach(chuanSac => { %>
    <tr>
      <td><%= chuanSac.machuansac %></td>
      <td><%= chuanSac.loaisac %></td>
      <td><%= chuanSac.congsuattoithieu %></td>
      <td><%= chuanSac.congsuattoida %></td>
      <td>
        <form
          method="POST"
          action="/admin/chuansac/delete/<%= chuanSac.machuansac %>"
        >
          <button type="submit" class="delete-btn">Xóa</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
